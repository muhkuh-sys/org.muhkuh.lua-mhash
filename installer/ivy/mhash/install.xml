<project xmlns:ivy="antlib:org.apache.ivy.ant" xmlns:if="ant:if" name="org.muhkuh.lua-mhash" default="install">
	<target name="install" description="install all components">
		<echo>org.muhkuh.lua-mhash</echo>
		
		<sequential if:true="${install.os_arch.linux_i386}">
			<copy file="linux_i386/mhash.so"      todir="${install.luaplugin}" />
		</sequential>
		
		<sequential if:true="${install.os_arch.linux_x86_64}">
			<copy file="linux_x86_64/mhash.so"    todir="${install.luaplugin}" />
		</sequential>
		
		<sequential if:true="${install.os_arch.windows_x86}">
			<copy file="windows_x86/mhash.dll"    todir="${install.luaplugin}" />
		</sequential>
		
		<sequential if:true="${install.os_arch.windows_amd64}">
			<copy file="windows_amd64/mhash.dll"  todir="${install.luaplugin}" />
		</sequential>
	</target>
</project>
